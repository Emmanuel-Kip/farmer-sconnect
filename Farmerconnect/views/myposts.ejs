</head>
<body>

	<section>
		<nav>
			<div class="row">
				<img src="/img/images/farmerlogo.svg" alt="logo" class="logo">
				<ul class="main-nav" id="myTopnav">
					<li class="nav-link"><a href="/welcome2">Home</a></li> 
					<li class="nav-link"><a href="#">Posts </a>
						<ul>
							<li class="nav-sub"><a href="/postproduce">Post Produce</a> </li>
							<li class="nav-sub"><a href="/myposts">My Posts</a> </li>
						</ul>
					</li>
					<li class="nav-link"><a href="#">Requests </a>
						<ul>
							<li class="nav-sub"><a href="/requests">Buyer's Requests</a> </li>
						</ul>
					</li>
					<li class="nav-link"><a href="#">Transport </a>
						<ul>
							<li class="nav-sub"><a href="/transports2">Available Transport</a> </li>
							<li class="nav-sub"><a href="/requestTransport2">Request Transport</a></li>
							<li class="nav-sub"><a href="/viewTransport4">My Requests</a></li>
						</ul>
					</li>
					<li class="nav-link"><a href="#">Storage </a>
						<ul>
							<li class="nav-sub"><a href="/storages">Available Storage</a> </li>
							<li class="nav-sub"><a href="/requeststorage">Request Storage</a></li>
							<li class="nav-sub"><a href="/mystorage2">My Requests</a></li>
						</ul>
					</li>
					
					<li class="nav-link"><a href="#">Account</a></li>
					<li class="nav-link"><a href="/logout">LogOut</a></li>
