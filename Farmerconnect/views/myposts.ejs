						<img src="images/menu.svg" alt="">
					</a>
				</ul>
			</div>
		</nav>
		
		
		<h1>My Posts</h1>
		
		<div class="table-hd">
		
			<table>
				<thead>
					<tr>
						<th></th>
						<th>Type of Produce</th>
						<th>Amount in kgs</th>
						<th>Date of Harvest</th>
						<th>Price</th>
					</tr>
				</thead>
			</table>
		
		</div>
		
		<div class="table-cnt">
		
			<table>
		
				<tr>
					<% if(items.length!=0){ var i=1; var x; items.forEach(function(rows){ %>
						<td>
							<%=i; %>
						</td>
						<td>
							<%=rows.produceName %>
						</td>
						<td name="amount">
							<%=rows.amountAvailable %>
						</td>
						<td>
							<%= moment(rows.dateOfHarvest).format('DD/MM/YYYY') %>
						</td>
						<td >
							<%=rows.pricePerKg %>
						</td>
				</tr>
		
				<% i++; }) %>
					<% } else{ %>
						<tr>
							<td colspan="7">No Data Found</td>
						</tr>
						<% } %>
		
			</table>
		
		</div>
	</section>
	</body>
	</html>

